{% extends "layout.jinja2" %}

{% block title %}Calendar{% endblock %}

{% block styles %}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/main.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link href="{{ request.static_url('plantask:static/styles/mycalendar.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
<div class="calendar-container">
  <div class="mycontainer">
    <div class="calendar-card">
      <div class="calendar-header">
        <h1>
          My Task Calendar
        </h1>
      </div>
      
      <div id="calendar"></div>
      
      <div class="task-legend">
        <div class="legend-item">
          <div class="legend-color legend-assigned"></div>
          <span>Assigned</span>
        </div>
        <div class="legend-item">
          <div class="legend-color legend-in_progress"></div>
          <span>In Progress</span>
        </div>
        <div class="legend-item">
          <div class="legend-color legend-under_review"></div>
          <span>Under Review</span>
        </div>
        <div class="legend-item">
          <div class="legend-color legend-completed"></div>
          <span>Completed</span>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block scripts %}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>
  <script src="{{ request.static_url('plantask:static/scripts/calendar.js') }}"></script>
{% endblock %}