{% extends "layout.jinja2" %}

{% block title %}@{{ user_viewing.username }}{% endblock %}

{% block styles %}
<style>
  .profile-avatar i {
    size: 4rem;
    color: #6c757d;
    transition: color 0.3s;
  }

  .profile-avatar:hover i {
    color: #7d4ec4;
  }


  .modal-custom {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.8);
    opacity: 0;
    visibility: hidden;
    z-index: 1055;
    background: white;
    width: 100%;
    max-width: 500px;
    padding: 2rem;
    border-radius: 0.5rem;
    box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175);
    transition: opacity 0.3s ease, transform 0.3s ease, visibility 0.3s;
  }

  .modal-custom.active {
    opacity: 1;
    visibility: visible;
    transform: translate(-50%, -50%) scale(1);
  }

  .modal-overlay {
    position: fixed;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1050;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s;
  }

  .modal-overlay.active {
    opacity: 1;
    visibility: visible;
  }
</style>
{% endblock %}

{% block content %}
<main class="mycontainer">
  <!-- Profile Card -->
  <div class="card shadow-sm mb-4">
    <div class="card-body d-flex align-items-center gap-4">
      <div class="profile-avatar" id="pfp-click" style="width: 8rem; aspect-ratio: 1 / 1;">
        {% if user.pfp %}
          <img src="{{ user.pfp }}" 
               alt="Profile Picture"
               style="width: 100%; height: 100%; object-fit: cover; border-radius: 50%;">
        {% else %}
          <img src="{{ request.static_url('plantask:static/default_pfp.svg') }}" 
               alt="Default Profile Picture" 
               style="width: 100%; height: 100%; object-fit: cover; border-radius: 50%;">
        {% endif %}
      </div>
      <div>
        <h3 class="mb-0">{{ user_viewing.first_name }} {{ user_viewing.last_name }}</h3>
        <p class="text-muted">@{{ user_viewing.username }}</p>
      </div>
      {% if role == 'admin' or user_viewing.id == user.id %}
        <button id="edit-profile-btn" class="btn btn-primary ms-auto">Edit Profile</button>
      {% endif %}
    </div>
  </div>

  <!-- Account Info -->
  <div class="card shadow-sm">
    <div class="card-header">
      <h5 class="mb-0">Account Info</h5>
    </div>
    <div class="card-body">
      <p><strong>Email:</strong> {{ user_viewing.email }}</p>
      <p><strong>Permission:</strong> {{ user_viewing.permission | capitalize }}</p>
    </div>
  </div>

  <!-- Modal Overlay -->
  <div class="modal-overlay" id="modal-overlay"></div>

  <!-- Edit Profile Modal -->
  <div class="modal-custom" id="edit-modal">
    <form method="POST" action="{{ request.route_url('edit_user', id=user_viewing.id) }}">
      <h4>Edit Profile</h4>
      <div class="mb-3">
        <label class="form-label">First Name</label>
        <input class="form-control" type="text" name="first_name" value="{{ user_viewing.first_name }}" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input class="form-control" type="text" name="last_name" value="{{ user_viewing.last_name }}" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Email</label>
        <input class="form-control" type="email" name="email" value="{{ user_viewing.email }}" required>
      </div>
      <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-success">Save Changes</button>
        <button type="button" class="btn btn-outline-danger" id="close-modal-btn">Cancel</button>
      </div>
    </form>
  </div>

  <!-- PFP Modal -->
  <div class="modal-custom" id="pfp-modal">
    <h4>Change Profile Picture</h4>
    <form method="POST" action="{{ request.route_url('file_upload_page') }}" enctype="multipart/form-data">
        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
        <input type="hidden" name="entity_type" value="profile_picture">
        <input type="hidden" name="entity_id" value="{{ user.id }}">
        <div class="modal-body">
            <div class="mb-3">
                <label for="projectImage" class="form-label">Profile Picture</label>
                <input type="file" name="file" class="form-control" id="projectImage" required>
            </div>
        </div>
        <div class="modal-footer border-0">
            <button type="submit" class="btn btn-success">Upload Image</button>
        </div>
    </form>
    <button class="btn btn-outline-secondary" onclick="closeModals()">Close</button>
  </div>
</main>
{% endblock %}

{% block scripts %}
<script>
  const overlay = document.getElementById('modal-overlay');
  const editModal = document.getElementById('edit-modal');
  const pfpModal = document.getElementById('pfp-modal');
  const editBtn = document.getElementById('edit-profile-btn');
  const closeBtn = document.getElementById('close-modal-btn');
  const pfpBtn = document.getElementById('pfp-click');

  const closeModals = () => {
    overlay.classList.remove('active');
    editModal.classList.remove('active');
    pfpModal.classList.remove('active');
  };

  if (editBtn) {
    editBtn.addEventListener('click', () => {
      editModal.classList.add('active');
      overlay.classList.add('active');
    });
  }

  if (closeBtn) {
    closeBtn.addEventListener('click', closeModals);
  }

  overlay.addEventListener('click', closeModals);

  if (pfpBtn) {
    pfpBtn.addEventListener('click', () => {
      pfpModal.classList.add('active');
      overlay.classList.add('active');
    });
  }
</script>

{% endblock %}
