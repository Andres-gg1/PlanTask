{% extends "layout.jinja2" %}

{% block title %}Projects{% endblock %}

{% block styles %}
<style>
.card {
  text-decoration: none;
  border: 1px solid #ddd;
  border-radius: 10px;
  overflow: hidden;
  width: 18rem;
  display: flex;
  flex-direction: column;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease-in-out;
}

.card:hover {
  transform: scale(1.05);
}

.card-img-top {
  width: 100%;
  height: 9.5rem; 
  object-fit: cover;
}

.card-body {
  background-color: #e6e6e6;
  padding: 0.5rem; 
  text-align: center;
  flex-grow: 1; 
  display: flex;
  flex-direction: column;
  justify-content: center; 
}

.card-title {
  font-weight: bold;
  margin-bottom: 0.5rem;
}

.card-text {
  color: black;
  font-size: 1.1rem;
  margin: 0;
  line-height: 1.2;
}

.projects-container {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  justify-content: left;
  padding: 1rem;
}
</style>
{% endblock %}

{% block content %}
<main class="mycontainer">
  <h1 style="margin-bottom: 1rem;">Projects</h1>
  <div class="projects-container">
  {% for project in projects %}
  <a href="{{ request.route_url('project_by_id', id=project.id) }}" class="card" style="width: 18rem;">
    <img src="{{ request.static_url('plantask:static/img_example.jpg') }}" class="card-img-top" alt="...">
    <div class="card-body">
      <h4 class="card-title">{{ project.name }}</h4>
      <p class="card-text">{{ project.description | truncate(50, True, '...') }}</p>
    </div>
  </a>
  {% endfor %}

  {% if role == 'admin' %}
    <a href="/create-project" class="create-proj-button">Create New Project  <i class="bi-plus-lg"></i></a>
  {% endif %}
  </div>
</main>
{% endblock %}

{% block scripts %}
{% endblock %}